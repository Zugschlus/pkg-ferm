#!/usr/bin/make -f

PACKAGE	:= ferm

build:

clean: debian/control
	test -e debian/control
	test root = "`whoami`" || (echo need root priviledges; exit 1)
	rm -rf debian/substvars debian/files debian/tmp

binary-indep: build

binary-arch: build debian/control
	test -e debian/control
	test root = "`whoami`" || (echo need root priviledges; exit 1)
	rm -rf debian/substvars debian/tmp
	install -d --mode=0755 debian/tmp
	install -d --mode=0755 "debian/tmp/usr/share/doc/$(PACKAGE)/examples"
	install --mode=0644 \
		examples/[a-z]* \
		"debian/tmp/usr/share/doc/$(PACKAGE)/examples"
	install -d -m0755 "debian/tmp/usr/share/man/man1"
	install -m0644 ferm.1 "debian/tmp/usr/share/man/man1"
	gzip -9f "debian/tmp/usr/share/man/man1"/*
	install -d -m0755 "debian/tmp/usr/bin"
	install -m0755 ferm "debian/tmp/usr/bin"
	install -m644 README AUTHORS "debian/tmp/usr/share/doc/$(PACKAGE)"
	install --mode=0644 debian/copyright README \
		"debian/tmp/usr/share/doc/$(PACKAGE)"
	install --mode=0644 CHANGES \
		"debian/tmp/usr/share/doc/$(PACKAGE)/changelog"
	install --mode=0644 debian/changelog \
		"debian/tmp/usr/share/doc/$(PACKAGE)/changelog.Debian"
	gzip -9f debian/tmp/usr/share/doc/"$(PACKAGE)"/changelog*
	install -d --mode=0755 debian/tmp/DEBIAN
	install --mode=0755 debian/postinst debian/prerm \
		debian/tmp/DEBIAN
	dpkg-gencontrol -isp
	dpkg --build debian/tmp ..

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
