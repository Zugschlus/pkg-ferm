option iptables         # for 2.4 kernels
option clearall         # begin with no rules
option createchains     # create chains at demand

table filter {
        # here comes all external firewalling
        chain INPUT {
                interface eth0 {
                        # put your firewall rules here, or
                        # split them up by protocol (whatever!)

                        # sample:
                        proto tcp {
                                dport (
                                        ssh ftp http pop3 smtp
                                ) ACCEPT;
                                syn DENY LOG;
                        }
                }
        }
}

table nat {
        # this handles MASQUERADING for both private subnets
        chain POSTROUTING {
                outerface eth0 saddr (
                        10.1.2.0/24 10.1.1.0/24
                ) MASQ;
        }
}
