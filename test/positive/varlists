
set IF1 eth0
set IF2 eth1
set IFS %IF1,%IF2

set OF1 "eth0"
set OF2 "eth1"
set OFS "%OF1,%OF2"

set A 192.168.0.0
set B 24
set TEST "%A/%B"
set TEST2 '%A/%B'
set TEST3 `echo -e %A/%B`

set INTERNALINTERFACES "eth0,eth1,eth2"
set EXTERNALINTERFACES "ppp0,tunl0"
set INTERFACES "%INTERNALINTERFACES,%EXTERNALINTERFACES,lo"


chain input daddr %TEST ACCEPT;
chain input daddr %TEST2 ACCEPT;
chain input daddr %TEST3 ACCEPT;
chain input daddr "%A/%B" ACCEPT;
chain input daddr '%A/%B' ACCEPT;
chain input daddr `echo %A/%B` ACCEPT;

chain input if %INTERFACES DROP;

chain input if %IFS LOG;
chain input of %OFS LOG;

