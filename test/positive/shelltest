
set PROTO `echo tcp`
set DNSSERVERS `grep nameserver /etc/resolv.conf | awk '{print $2}'`
set TEST `echo -e -n 'eth0\neth1\neth2\n'`
set NTP `grep server /etc/ntp.conf | awk '{print $2}'`

chain input proto %PROTO dport `echo 123` ACCEPT;
chain input proto tcp saddr %DNSSERVERS ACCEPT;
chain input proto udp saddr %NTP ACCEPT;
chain input proto tcp daddr `grep nameserver /etc/resolv.conf | awk '{print $2}'` ACCEPT;
chain input if $TEST ACCEPT;


